{
	"name": "planer",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "npm run build && vite preview",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"cap:sync": "npx cap sync",
		"cap:add:ios": "npx cap add ios",
		"cap:add:android": "npx cap add android",
		"cap:open:ios": "npx cap open ios",
		"cap:open:android": "npx cap open android",
		"cap:copy": "npx cap copy",
		"android": "npm run build && npm run cap:sync && npm run cap:open:android",
		"ios": "npm run build && npm run cap:sync && npm run cap:open:ios",
		"check:android": "powershell -ExecutionPolicy Bypass -File .\\check-android-setup.ps1",
		"setup:android": "powershell -ExecutionPolicy Bypass -File .\\setup-android-env.ps1",
		"find:android": "powershell -ExecutionPolicy Bypass -File .\\find-android-sdk.ps1",
		"setup:android:manual": "powershell -ExecutionPolicy Bypass -File .\\setup-android-env-manual.ps1"
	},
	"dependencies": {
		"@capacitor/android": "^7.4.4",
		"@capacitor/app": "^7.1.0",
		"@capacitor/cli": "^7.4.4",
		"@capacitor/core": "^7.4.4",
		"@capacitor/device": "^7.0.2",
		"@capacitor/haptics": "^7.0.2",
		"@capacitor/keyboard": "^7.0.3",
		"@capacitor/splash-screen": "^7.0.3",
		"@capacitor/status-bar": "^7.0.3",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.16",
		"@eslint/js": "^9.33.0",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"wrangler": "^4.45.1"
	}
}
